# =============================================================================
# Futures Trading Co-Pilot — Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# =============================================================================

# ---------------------------------------------------------------------------
# PostgreSQL (durable storage: journal, historical opts, alerts)
# ---------------------------------------------------------------------------
POSTGRES_USER=futures_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=futures_db
DATABASE_URL=postgresql+psycopg://futures_user:${POSTGRES_PASSWORD}@postgres:5432/futures_db

# ---------------------------------------------------------------------------
# Redis (hot cache: latest FKS metrics, live positions, 1m bars)
# ---------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# ---------------------------------------------------------------------------
# Data Service (FastAPI backend — internal Docker network URL)
# ---------------------------------------------------------------------------
DATA_SERVICE_URL=http://data-service:8000

# ---------------------------------------------------------------------------
# Massive.com API (primary real-time futures data source)
# Leave blank to fall back to yfinance
# ---------------------------------------------------------------------------
MASSIVE_API_KEY=
MASSIVE_SECRET_KEY=

# ---------------------------------------------------------------------------
# Grok / xAI API (AI-powered morning briefings & trade analysis)
# ---------------------------------------------------------------------------
XAI_API_KEY=

# ---------------------------------------------------------------------------
# Contract mode: "micro" (default, recommended) or "full"
# Micro contracts = 1/10 of full size, better for position sizing granularity
# ---------------------------------------------------------------------------
CONTRACT_MODE=micro

# ---------------------------------------------------------------------------
# Account size default (50000 / 100000 / 150000)
# ---------------------------------------------------------------------------
DEFAULT_ACCOUNT_SIZE=150000

# ---------------------------------------------------------------------------
# SQLite path (legacy — will be migrated to Postgres)
# ---------------------------------------------------------------------------
DB_PATH=/app/data/futures_journal.db

# ---------------------------------------------------------------------------
# API Key (shared secret for inter-service authentication)
# Leave blank to disable authentication (fine for localhost-only deployments)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# ---------------------------------------------------------------------------
API_KEY=

# ---------------------------------------------------------------------------
# Logging level (DEBUG, INFO, WARNING, ERROR)
# ---------------------------------------------------------------------------
LOG_LEVEL=INFO

# ---------------------------------------------------------------------------
# Log format: "console" (human-readable, default) or "json" (structured)
# Use "json" in Docker / production for machine-parseable log lines
# ---------------------------------------------------------------------------
LOG_FORMAT=console
